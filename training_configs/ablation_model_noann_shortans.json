{
  "dataset_reader": {
    "tokenizer": {
      "end_tokens": [
        "@@NULL@@"
      ]
    },
    "type": "arc-knowledge-sentences-json",
    "fact_key": "fact",
    "token_indexers": {
      "tokens": {
        "lowercase_tokens": true,
        "type": "single_id"
      }
    },
    "conceptnet_kb_path": "data/conceptnet/cached_conceptnet.tsv",
    "use_top_relation": "false",
    "indices": "busc_plusplus",
    "use_elastic_search": "true",
    "use_conceptnet": "true",
    "max_tuples": 10,
    "add_relation_labels": false
  },
  "train_data_path": "data/input/shortans_squadspans/train_prefetched_SPAN_PRED.jsonl",
  "validation_data_path": "data/input/shortans_squadspans/dev_prefetched_SPAN_PRED.jsonl",
  "test_data_path": "data/input/shortans_squadspans/test_prefetched_SPAN_PRED.jsonl",
  "evaluate_on_test": true,
  "iterator": {
    "batch_size": 16,
    "sorting_keys": [
      [
        "question",
        "num_tokens"
      ],
      [
        "fact",
        "num_tokens"
      ]
    ],
    "type": "bucket"
  },
  "model": {
    "use_projection": "false",
    "var_dropout": 0.2,
    "initializer": [
      [
        ".*linear_layers.*weight",
        {
          "type": "xavier_normal"
        }
      ],
      [
        ".*token_embedder_tokens._projection.*weight",
        {
          "type": "xavier_normal"
        }
      ]
    ],
    "type": "span_relation_pred_factatt",
    "text_field_embedder": {
      "tokens": {
        "embedding_dim": 300,
        "pretrained_file": "https://allennlp.s3.amazonaws.com/datasets/glove/glove.840B.300d.txt.gz",
        "trainable": false,
        "type": "embedding"
      }
    },
    "combination": "x-y,x*y",
    "aggregate": "max",
    "span_extractor": {
      "type": "self_attentive",
      "input_dim": 200
    },
    "relation_predictor": {
      "num_layers": 2,
      "hidden_dims": [
        200,
        100
      ],
      "dropout": [
        0.5,
        0
      ],
      "activations": [
        "tanh",
        "linear"
      ],
      "input_dim": 400
    },
    "encoder": {
      "input_size": 300,
      "bidirectional": true,
      "num_layers": 1,
      "type": "lstm",
      "hidden_size": 100
    },
    "reln_ff": {
      "num_layers": 2,
      "hidden_dims": [
        200,
        1
      ],
      "dropout": [
        0.5,
        0
      ],
      "activations": [
        "tanh",
        "linear"
      ],
      "input_dim": 500
    },
    "ignore_relns": "false",
    "ignore_spans": "true",
    "scale_relation_loss": 1,
    "coverage_ff": {
      "num_layers": 2,
      "hidden_dims": [
        200,
        1
      ],
      "dropout": [
        0.5,
        0
      ],
      "activations": [
        "tanh",
        "linear"
      ],
      "input_dim": 400
    }
  },
  "trainer": {
    "cuda_device": 0,
    "learning_rate_scheduler": {
      "factor": 0.5,
      "mode": "max",
      "patience": 5,
      "type": "reduce_on_plateau"
    },
    "num_epochs": 128,
    "optimizer": {
      "type": "adam"
    },
    "patience": 10,
    "validation_metric": "+choice_accuracy"
  }
}
